    { id: 'cardiac', name: 'Heart Emergency', icon: '‚ù§Ô∏è' },
    { id: 'trauma', name: 'Accident/Trauma', icon: 'ü§ï' },
    { id: 'stroke', name: 'Stroke', icon: 'üß†' },
    { id: 'maternity', name: 'Maternity', icon: 'ü§∞' },
    { id: 'general', name: 'General Emergency', icon: 'üè•' }
  ];

