    //   body: JSON.stringify({
    //     userId: currentUser.id,
    //     ambulanceType: selectedAmbulance.id,
    //     problemType: selectedProblem.id,
    //     hospitalId: selectedHospital.id,
    //     pickupLocation: userLocation,
    //     estimatedCost: estimatedCost
    //   })
